<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblue"
    android:id="@+id/berita_utama"


    tools:context="com.example.gaossalma.drawer_layout.home">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- TODO: Update blank fragment layout -->
   <LinearLayout

       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingBottom="5dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp">
           <android.support.v7.widget.CardView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp">
               <RelativeLayout
                   android:id="@+id/menu1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp">
                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/pisah"
                       >


                   <ImageView

                       android:id="@+id/imageview"
                       android:background="#702f2f"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_marginRight="20dp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_toRightOf="@+id/pisah"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginLeft="10dp">

                   <TextView


                       android:text="Judul"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:layout_centerVertical="true"

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                       <TextView
                            android:layout_marginTop="5dp"

                           android:layout_toRightOf="@+id/imageview"
                           android:text="isi berita"
                           android:textSize="15dp"
                           android:layout_centerVertical="true"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
               </RelativeLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp">
           <android.support.v7.widget.CardView

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp">
               <RelativeLayout
                   android:id="@+id/menu2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="5dp">
                   <LinearLayout
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/pisah2"
                       >


                       <ImageView

                           android:id="@+id/imageview1"
                           android:background="#702f2f"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:layout_marginRight="20dp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_toRightOf="@+id/pisah2"
                       android:layout_marginLeft="10dp">

                       <TextView

                           android:layout_toRightOf="@+id/imageview"
                           android:text="Judul"
                           android:textSize="15dp"
                           android:textStyle="bold"
                           android:layout_centerVertical="true"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_marginTop="5dp"
                           android:layout_toRightOf="@+id/imageview"
                           android:text="isi berita"
                           android:textSize="15dp"
                           android:layout_centerVertical="true"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
               </RelativeLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>

   </LinearLayout>
    </ScrollView>
</RelativeLayout>
